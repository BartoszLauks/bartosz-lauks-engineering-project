{% extends 'Header.html.twig' %}

{% block title %}New Cars{% endblock %}

{% block body %}
    {% if bodys|default %}
        <div class="center-bar-post">
            <h4>Select new car body</h4>
        </div>
        {% for body in bodys %}
            {% if now|default%}
            <a href="{{ path('new_cars_now_engine', { generation : generation, body : body.name}) }}" style="color: black">
        {% else %}
            <a href="{{ path('new_cars_year_ago_engine', { generation : generation, body : body.name}) }}" style="color: black">
        {% endif %}
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">{{ body.name }}</h3>
                    </div>
                </div>
            </a>
        {% endfor %}
    {% else %}
        <div class="center-bar-warning">
            <h4>There are no new cars for this year</h4>
        </div>
    {% endif %}
{% endblock %}
