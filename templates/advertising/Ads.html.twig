{% block body %}
    {% if path == "default.png" %}
        <img src="{{ asset(path) }}" alt="" style="max-height: 200px;max-width: 1000px; padding: 5px">
    {% else %}
        <img src="{{ asset("/uploads/" ~ path) }}" style="max-height: 200px;max-width: 1000px; padding: 5px"  alt="">
    {% endif %}

{% endblock %}