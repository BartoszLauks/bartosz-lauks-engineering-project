<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="https://cdn-icons.flaticon.com/png/512/2330/premium/2330453.png?token=exp=1636966926~hmac=5d87aae16bddcd2b3f0399a362e64bc3">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
            <style>
                @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
                html,
                body {
                    font-family: 'Roboto', sans-serif;
                    margin:0;
                    padding:0;
                    height:100%;
                }
                #container {
                    min-height:100%;
                    position:relative;
                }
                #header {
                    background-image: linear-gradient(to bottom right, #7BA4A8, #618285);
                    position: fixed;
                    right: 0;
                    left: 0;
                }
                #under_header {
                    height: 56px;
                    position: static;
                    width: 100%;
                }
                #body {
                    padding:10px;
                    padding-bottom:60px;
                    background-color: white;
                    color: black;
                }
                #footer {
                    position:absolute;
                    bottom:0;
                    width:100%;
                    height:60px;   /* Height of the footer */
                }
                #login-register-container {
                    margin: 10% auto auto;
                    text-align: center;
                    width: 500px;
                }
                .btn {
                    transition-duration: 0.4s;
                    background: #9f9d9d;
                    border: black;
                    color: white;
                }
                .btn:hover {
                    background-color: #8c8c8c;
                    color: black;
                }
                .alert {
                    position: static;
                }
                .bg-primary {
                    background-image: linear-gradient(to bottom right, rgb(134, 134, 134) , rgb(134, 134, 134));
                }
                .navbar-light .navbar-brand {
                    color: white;
                }
                .navbar-light .navbar-nav .nav-link {
                    color: white;
                }
                #advertising
                {
                    left: 0;
                    right: 0;
                    background-color: #d5d5d5;
                    height: 210px;
                    text-align: center;
                }
            </style>
        {% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>

    <div id="container">
        <div id="header">
            <nv class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="{{ path('app_home') }}">Everything About Cars</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('technical_data_brand') }}>Technical Data</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                            {% else %}
                            <a class="nav-link" href="{{ path('app_login') }}">Sign in</a>
                        <li>
                            <a class="nav-link" href="{{ path('app_register') }}">Sign up !</a>
                        </li>
                        {% endif %}
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn" type="submit">Search</button>
                    </form>
                </div>
            </nv>
        </div>
        <div id="under_header">

        </div>
        <div id="advertising">
            {# <img src="{{ asset('/default.png') }}" alt=""> #}
            {{ render(controller('App\\Controller\\AdvertisingController::index')) }}
        </div>
        <div id="body">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}

            {% endblock %}

        </div>
        <div id="footer">
            <footer class="bg-primary text-white text-center text-lg-start">
